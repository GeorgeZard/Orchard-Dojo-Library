<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>obackgroundtask</Title>
			<Shortcut>obackgroundtask</Shortcut>
			<Description>Code snippet for creating an IBackgroundTaks implementation.</Description>
			<Author>Lombiq</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>name</ID>
					<ToolTip>Name of the background task</ToolTip>
					<Default>MyFirst</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp">
				<![CDATA[public class $name$BackgroundTask : IBackgroundTask
				{
					public void Sweep()
					{
						$end$
					}
				}]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>